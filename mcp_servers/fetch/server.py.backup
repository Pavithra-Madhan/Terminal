from mcp import Server, TextContent
import requests
from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
import uvicorn

server = Server("fetch")

@server.call_tool("get")
def fetch_url(url: str):
    try:
        r = requests.get(url, timeout=5)
        return TextContent(r.text)
    except Exception as e:
        return TextContent(f"[fetch-error] {str(e)}")

# HTTP wrapper
app = FastAPI(title="MCP Fetch Server")

class ToolRequest(BaseModel):
    name: str
    arguments: dict

@app.post("/call")
async def call_tool(request: ToolRequest):
    try:
        if request.name == "get":
            result = fetch_url(request.arguments.get("url", ""))
        else:
            raise HTTPException(status_code=404, detail=f"Tool {request.name} not found")
        return {"result": result.text if hasattr(result, "text") else str(result)}
    except Exception as e:
        raise HTTPException(status_code=500, detail=str(e))

@app.get("/health")
async def health():
    return {"status": "ok"}

if __name__ == "__main__":
    uvicorn.run(app, host="0.0.0.0", port=8000)
