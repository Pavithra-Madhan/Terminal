from mcp import Server, TextContent
import os
from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
import uvicorn

server = Server("fs")

@server.call_tool("read")
def read_file(path: str):
    try:
        with open(path, "r") as f:
            return TextContent(f.read())
    except Exception as e:
        return TextContent(f"[fs-error] {str(e)}")

@server.call_tool("write")
def write_file(input):
    path = input["path"]
    content = input["content"]
    try:
        with open(path, "w") as f:
            f.write(content)
        return TextContent("ok")
    except Exception as e:
        return TextContent(f"[fs-error] {str(e)}")

# HTTP wrapper
app = FastAPI(title="MCP FS Server")

class ToolRequest(BaseModel):
    name: str
    arguments: dict

@app.post("/call")
async def call_tool(request: ToolRequest):
    try:
        if request.name == "read":
            result = read_file(request.arguments.get("path", ""))
        elif request.name == "write":
            result = write_file(request.arguments)
        else:
            raise HTTPException(status_code=404, detail=f"Tool {request.name} not found")
        return {"result": result.text if hasattr(result, "text") else str(result)}
    except Exception as e:
        raise HTTPException(status_code=500, detail=str(e))

@app.get("/health")
async def health():
    return {"status": "ok"}

if __name__ == "__main__":
    uvicorn.run(app, host="0.0.0.0", port=8000)
