from mcp import Server, TextContent
from fastapi import FastAPI, HTTPException
from pydantic import BaseModel
import uvicorn

server = Server("python")

@server.call_tool("exec")
def run_python(code: str):
    try:
        local_vars = {}
        exec(code, {}, local_vars)
        return TextContent(str(local_vars))
    except Exception as e:
        return TextContent(f"[python-error] {str(e)}")

# HTTP wrapper
app = FastAPI(title="MCP Python Server")

class ToolRequest(BaseModel):
    name: str
    arguments: dict

@app.post("/call")
async def call_tool(request: ToolRequest):
    try:
        if request.name == "exec":
            result = run_python(request.arguments.get("code", ""))
        else:
            raise HTTPException(status_code=404, detail=f"Tool {request.name} not found")
        return {"result": result.text if hasattr(result, "text") else str(result)}
    except Exception as e:
        raise HTTPException(status_code=500, detail=str(e))

@app.get("/health")
async def health():
    return {"status": "ok"}

if __name__ == "__main__":
    uvicorn.run(app, host="0.0.0.0", port=8000)
